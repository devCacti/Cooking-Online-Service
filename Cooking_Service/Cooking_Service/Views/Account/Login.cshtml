@using Cooking_Service.Models
@model LoginViewModel
@{
    ViewBag.Title = "Entrar";
}

<main aria-labelledby="title">
    <p></p>
    <h2 id="title">@ViewBag.Title</h2>
    <br />
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use uma conta local para fazer o login.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control txt-white bg-dark" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control txt-white bg-dark" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <p></p>
                <div class="row">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @type = "checkbox", @class = "form-check-input bg-dark" })

                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <br />
                <div>
                    <input type="submit" value="Entrar" class="btn btn-outline-light" />
                </div>
                <br />
                <p class="txt-white">
                    @Html.ActionLink("Registre-se como um novo utilizador", "Register")
                </p>
                @* Habilite quando a confirmação da conta estiver ativada para a funcionalidade de redefinição de senha
        <p>
            @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")
        </p>*@
                }
</section>
        </div>
        <div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}